{
  "manifest_version": 3,
  "name": "AITools Pro",
  "version": "4.0.0",
  "description": "Suite compl√®te d'outils IA: Recherche Google, Mode Sombre, Temps de lecture, Notes",
  "permissions": ["activeTab", "scripting", "storage", "tabs", "notifications", "tabGroups"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup-new.html",
    "default_title": "AITools Pro - Outils intelligents",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["layout-manager.js", "content-v4.js"],
      "run_at": "document_start",
      "all_frames": false
    }
  ],
  "background": {
    "service_worker": "background-v4.js"
  },
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
